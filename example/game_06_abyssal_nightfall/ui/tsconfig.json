{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": false,
    "lib": ["DOM", "ES2020"],
    "rootDir": "src",
    "outDir": "../out/scripts"
  },
  "include": [
    "src/**/*.ts"
  ]
}
